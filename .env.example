# ==========================================
# i4ops Dashboard Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================
NODE_ENV=production
DEPLOYMENT_HOST=your.server.ip

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://i4ops:your_secure_password@localhost:5432/i4ops_dashboard
DB_PASSWORD=your_secure_password

# ==========================================
# SSH CONFIGURATION (for VM monitoring)
# ==========================================
SSH_USER=i4ops
SSH_PASSWORD=your_ssh_password
U0_IP=100.76.195.14

# ==========================================
# TAILSCALE OAUTH CONFIGURATION
# ==========================================
TS_OAUTH_CLIENT_ID=your_tailscale_client_id
TS_OAUTH_CLIENT_SECRET=your_tailscale_client_secret
TAILNET=your_tailnet_name

# ==========================================
# SUPABASE CONFIGURATION (for authentication)
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==========================================
# API CONFIGURATION
# ==========================================
VITE_API_BASE_URL=http://your.server.ip:4000/api
VITE_API_HOST=your.server.ip
VITE_API_PORT=4000

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Generate secure passwords using:
# openssl rand -base64 32

# JWT_SECRET=your_jwt_secret_key_here
# API_KEY=your_api_key_here

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# LOG_LEVEL=info
# METRICS_ENABLED=true
# HEALTH_CHECK_INTERVAL=30

# ==========================================
# SSL CONFIGURATION (for production)
# ==========================================
# SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
# SSL_KEY_PATH=/etc/ssl/private/privkey.pem 